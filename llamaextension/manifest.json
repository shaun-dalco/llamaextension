{
    "manifest_version": 2,
    "name": "LlamaExtension",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/icon48.png"
        },
        "default_title": "LlamaExtension",
        "default_popup": "popup.html"
    },

    "permissions": ["activeTab", "tabs", "<all_urls>"],
    "web_accessible_resources": [
        "images/background.png"
    ]
}